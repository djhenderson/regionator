<kml xmlns="http://earth.google.com/kml/2.1">
<!--

  balloon.kml

    StyleMap
      normal:
        label: hidden
        icon: white paddle, w/ bottom hotspot
      highlight:
        balloon: bgcolor, text entity replacement
        icon: red star paddle, w/ bottom hotspot

-->
  <Document>

    <Style id="station_icon_normal">
      <IconStyle>
        <Icon>
          <href>wht-blank.png</href>
        </Icon>
        <hotSpot x=".5" y="0" xunits="fraction" yunits="fraction"/>
      </IconStyle>
      <LabelStyle>
        <scale>0</scale>
      </LabelStyle>
    </Style>

    <Style id="station_icon_highlight">
      <IconStyle>
        <Icon>
          <href>red-stars.png</href>
        </Icon>
        <hotSpot x=".5" y="0" xunits="fraction" yunits="fraction"/>
      </IconStyle>
      <BalloonStyle>
        <bgColor>ffffbb8b</bgColor>
        <text>
          <![CDATA[
The station is <b>$[name]</b><br/>
there are $[description].
]]>
        </text>
      </BalloonStyle>
    </Style>

    <StyleMap id="station_icon">
      <Pair>
        <key>normal</key>
        <styleUrl>#station_icon_normal</styleUrl>
      </Pair>
      <Pair>
        <key>highlight</key>
        <styleUrl>#station_icon_highlight</styleUrl>
      </Pair>
    </StyleMap>

    <Placemark>
      <styleUrl>#station_icon</styleUrl>
      <Point>
        <coordinates>1,1</coordinates>
      </Point>
    </Placemark>

  </Document>
</kml>
